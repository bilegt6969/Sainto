{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/HeroSection.js", "src/firebaseConfig.ts", "src/app/(frontend)/terms/TermsView.js", "src/app/(frontend)/about-us/demo", "src/app/api/goat-products/route.ts", "src/app/api/home-data/route.js", "src/app/store/cartStore.js", "src/app/api/payload/collections/route.js"],
  "exclude": ["node_modules"]
}
